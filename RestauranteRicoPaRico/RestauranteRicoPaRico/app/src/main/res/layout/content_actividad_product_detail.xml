<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:weightSum="1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.herprogramacion.restaurantericoparico.ui.ActividadProductDetail"
    tools:showIn="@layout/activity_actividad_product_detail"
    >

    <ImageView android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/ImageViewProduct"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_margin="5dip"
        android:layout_weight="0.02"   />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/accentColor"
        android:orientation="horizontal"
        android:padding="8dp"  >

        <TextView android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/TextViewProductTitle"
            android:gravity="center"
            android:text="sd"
            android:textSize="16dp"
            android:textColor="#fcfbfb"
            android:layout_above="@+id/TextViewProductDetails"
            android:layout_marginBottom="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead.Inverse"
           />
    </LinearLayout>


    <TextView android:layout_height="wrap_content"
        android:id="@+id/TextViewProductDetails"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:text="Descripcion Proximamente"
        android:layout_above="@+id/ButtonAddToCart"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="8dp"
        android:layout_marginBottom="191dp"/>



    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/ButtonAddToCart"
        android:text="AÃ±adir al carrito"
        android:layout_marginBottom="67dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

</LinearLayout>
