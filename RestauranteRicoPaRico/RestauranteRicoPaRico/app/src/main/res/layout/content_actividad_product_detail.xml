<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.herprogramacion.restaurantericoparico.ui.ActividadProductDetail"
    tools:showIn="@layout/activity_actividad_product_detail">

    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/LinearLayoutHeader"
        android:orientation="horizontal">
        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ImageViewProduct"
            android:adjustViewBounds="true" android:scaleType="fitXY"
            android:layout_margin="5dip"></ImageView>

    </LinearLayout>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/TextViewProductTitle"
        android:layout_gravity="center"
        android:textSize="26dip"
        android:textColor="#000000"
        android:layout_above="@+id/TextViewProductDetails"
        android:layout_toRightOf="@+id/LinearLayoutHeader"
        android:layout_toEndOf="@+id/LinearLayoutHeader"
        android:layout_marginBottom="25dp"></TextView>

    <TextView android:layout_height="wrap_content" android:id="@+id/TextViewProductDetails"
        android:layout_width="fill_parent"
        android:layout_weight="1" android:textColor="#000000" android:text="Product description"
        android:layout_above="@+id/ButtonAddToCart"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="191dp"></TextView>
    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right" android:id="@+id/ButtonAddToCart"
        android:text="Add to Cart"
        android:layout_marginBottom="73dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/TextViewProductDetails"
        android:layout_alignEnd="@+id/TextViewProductDetails"></Button>

</RelativeLayout>
